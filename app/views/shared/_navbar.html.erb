
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "releaf-logo.svg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    <% if user_signed_in? %>
       <li class="nav-item active">
        <%= link_to "Plants", plants_path, class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to "myPlants", dashboard_myplants_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "myBookings", dashboard_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/alexandroNussbaumer", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    <% else %>
    <li class="nav-item active">
        <%= link_to "Plants", plants_path, class: "nav-link" %>
      </li>
    <li class="nav-item dropdown">
      <%= image_tag "avatar.svg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
        </div>
      </li>
    <% end %>
    </ul>
  </div>
</div>
