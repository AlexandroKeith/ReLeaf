<div class="container">
  <h1 class="py-4">Leave a review for <%= @plant.name %> </h1>
  <%= simple_form_for [@plant, @review] do |f| %>

    <div class="form-inputs">
      <%= f.input :rating, collection: 1..5 %>
      <%= f.input :content %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class:'btn btn-primary'  %>
    </div>
  <% end %>
</div>
